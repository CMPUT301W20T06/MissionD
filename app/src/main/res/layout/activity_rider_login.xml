<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rider_login"
    android:background="@drawable/background_yifei2">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/table"
        android:background="#88000000"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="User name"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@+id/table"
            app:layout_constraintStart_toStartOf="@+id/table"
            app:layout_constraintTop_toTopOf="@+id/table"  />


        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Email address(optional)"
            android:inputType="textEmailAddress"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@+id/table"
            app:layout_constraintStart_toStartOf="@+id/table"
            app:layout_constraintTop_toBottomOf="@+id/user_name" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone number(optional)"
            android:inputType="numberSigned"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/darker_gray"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/table"
            app:layout_constraintStart_toStartOf="@+id/table"
            app:layout_constraintTop_toBottomOf="@+id/email" />


        <Button
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log in"
            android:background="#80FFFFFF"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/table"
            app:layout_constraintEnd_toEndOf="@+id/table"
            app:layout_constraintStart_toStartOf="@+id/table"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>