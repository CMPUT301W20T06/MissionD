<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="320dp"
    android:background="#75E0FFFF">

    <ImageView
        android:id="@+id/profile_rider_confirm"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="38dp"
        android:background="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id = "@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver Name"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/profile_rider_confirm"
        app:layout_constraintTop_toBottomOf="@+id/profile_rider_confirm"/>

    <LinearLayout
        android:id="@+id/driver_info"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_rider_confirm">

        <TextView
            android:id="@id/driver_rating"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="0.0" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="E12345"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/callOrEmail"
        android:orientation="horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/driver_info"
        app:layout_constraintStart_toStartOf="@+id/driver_info">

        <Button
            android:id="@+id/call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/dian_hua"/>

        <Button
            android:id="@+id/email"
            android:layout_marginLeft="20dp"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/youxiang"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/callOrEmail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/confirm_river_confirm"
            android:background="@drawable/gou_ico"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <Button
            android:id="@+id/cancel_river_confirm"
            android:background="@drawable/cuo2"
            android:layout_marginLeft="110dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>