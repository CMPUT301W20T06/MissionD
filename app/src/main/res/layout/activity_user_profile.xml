<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_yifei2"
    tools:context=".UserProfileActivity">

    <LinearLayout
        android:id="@+id/subUserProfile"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#607D8B">

        <Button
            android:id="@+id/profileBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="Profile"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subUserProfile2"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/profile"
            app:layout_constraintTop_toTopOf="@+id/subUserProfile2"
            app:layout_constraintBottom_toBottomOf="@+id/subUserProfile2"
            app:layout_constraintStart_toStartOf="@+id/subUserProfile2"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:text="User Name"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@+id/profilePic"
            app:layout_constraintTop_toTopOf="@+id/subUserProfile2"/>

        <Button
            android:id="@+id/orderHistory"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Order History"
            android:background="@drawable/rectangle_background"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            app:layout_constraintStart_toStartOf="@+id/user_name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="#75E0FFFF">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/name"/>

        <TextView
            android:id="@+id/editName_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Isaac"
            android:textColor="#000000"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#75E0FFFF">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dian_hua"/>

        <EditText
            android:id="@+id/editPhone_profile"
            android:layout_width="300dp"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_height="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#75E0FFFF">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/youxiang"/>

        <EditText
            android:id="@+id/editEmail_profile"
            android:layout_width="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="60dp" />

    </LinearLayout>


    <Button
        android:id="@+id/confirm_profile_edit"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_background"
        android:text="Confirm" />


</LinearLayout>