<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.missiond">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_ash"
        android:label="MissionD"
        android:roundIcon="@mipmap/logo_ash_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".rider_login"></activity>
        <activity android:name=".Register" />
        <activity android:name=".ScanQRcode" />
        <activity android:name=".RiderRateActivity" />
        <activity android:name=".RiderOrderActivity" />
        <activity android:name=".RiderEndPayActivity" />
        <activity android:name=".RiderOnTripActivity" />
        <activity android:name=".RiderWaitForPickUp" />
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".DriverActivity" />
        <activity android:name=".RiderActivity" />
        <activity android:name=".driver_login" />
        <activity android:name=".RiderMakeRequestActivity" />
        <activity android:name=".DriverPickupActivity"/>
        <activity android:name=".DriverPickeupRiderActivity" />
        <activity android:name=".DriverCompleteTripActivity" />
        <activity android:name=".DriverMakeOfferActivity" />
        <activity android:name=".DriverSearchRequestActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- The API key for Google Maps-based APIs. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MapActivity" />
        <activity android:name=".RiderWaitForAcceptActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>